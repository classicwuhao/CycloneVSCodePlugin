{
  "name": "Cyclone",
  "publisher": "HaoWu",
  "displayName": "Cyclone",
  "description": "Cyclone Plugin for Visual Studio Code",
  "icon": "icon.png",
  "version": "0.0.8",
  "public": false,
  "homepage": "https://github.com/classicwuhao/CycloneVSCodePlugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/classicwuhao/CycloneVSCodePlugin"
  },
  "engines": {
    "vscode": "^1.72.0"
  },
  "activationEvents": [],
  "main": "./extension.js",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "configuration": {
      "title": "Cyclone",
      "properties": {
        "check.Timeout": {
          "type": "number",
          "minimum": 1,
          "maximum": 7200,
          "default": 10,
          "description": "Time before cancellation when checking specifications (in seconds)"
        },
        "graphicTrace.GraphViz": {
          "type": "boolean",
          "default": false,
          "format": "url",
          "markdownDescription": "Generate png trace. Please note that you need to install Graphviz for this functionality. To install Graphviz: `https://graphviz.org/download/` "
        }
      }
    },
    "languages": [
      {
        "id": "cyclone",
        "aliases": [
          "cyclone",
          "cyclone"
        ],
        "extensions": [
          ".cyclone"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "cyclone",
        "scopeName": "text.cyclone",
        "path": "./syntaxes/cyclone.tmLanguage"
      }
    ],
    "commands": [
      {
        "command": "cyclone.m1.check",
        "title": "Check This Cyclone Spec",
        "category": "Cyclone"
      },
      {
        "command": "cyclone.m2.trace",
        "title": "Show Trace File",
        "category": "Cyclone"
      },
      {
        "command": "cyclone.m8.pngTrace",
        "title": "Show Trace File (Graphic)",
        "category": "Cyclone"
      },
      {
        "command": "cyclone.m3.clean",
        "title": "Clean Trace File",
        "category": "Cyclone"
      },
      {
        "command": "cyclone.m4.cleanAll",
        "title": "Clean All Trace Files",
        "category": "Cyclone"
      },
      {
        "command": "cyclone.m5.version",
        "title": "Version Info",
        "category": "Cyclone"
      },
      {
        "command": "cyclone.m6.settings",
        "title": "Settings",
        "category": "Cyclone"
      },
      {
        "command": "cyclone.m7.examples",
        "title": "Load example...",
        "category": "Cyclone"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "Cyclone.Submenu",
          "group": "Cyclone.Menu"
        }
      ],
      "Cyclone.Submenu": [
        {
          "command": "cyclone.m1.check",
          "group": "1.Cyclone.MainItem@1", 
          "when": "resourceExtname == .cyclone"
        },
        {
          "command": "cyclone.m2.trace",
          "group": "1.Cyclone.MainItem@2",
          "when": "resourceExtname == .cyclone"
        },
        {
          "command": "cyclone.m8.pngTrace",
          "group": "1.Cyclone.MainItem@3",
          "when": "resourceExtname == .cyclone"
        },
        {
          "command": "cyclone.m3.clean",
          "group": "1.Cyclone.MainItem@4",
          "when": "resourceExtname == .cyclone"
        },
        {
          "command": "cyclone.m4.cleanAll",
          "group": "1.Cyclone.MainItem@5", 
          "when": "resourceExtname == .cyclone"
        },
        {
          "command": "cyclone.m7.examples",
          "group": "2.Cyclone.Examples"
        },
        {
          "command": "cyclone.m5.version",
          "group": "3.Cyclone.MenuInfo"
        },
        {
          "command": "cyclone.m6.settings",
          "group": "3.Cyclone.MenuInfo"
        }
      ]
    },
    "submenus": [
      {
        "label": "Cyclone",
        "id": "Cyclone.Submenu"
      }
    ]
  },
  "devDependencies": {
    "vscode": "^1.1.37"
  }
}
